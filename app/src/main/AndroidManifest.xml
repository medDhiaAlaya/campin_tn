<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.campingtn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CampingTn">
        <activity
            android:name=".screens.ProfileScreen"
            android:exported="false" />
        <activity
            android:name=".screens.CommunityScreen"
            android:exported="false" />
        <activity
            android:name=".screens.TipsScreen"
            android:exported="false" />
        <activity
            android:name=".screens.ToolsScreen"
            android:exported="false" />
        <activity
            android:name=".screens.PlacesScreen"
            android:exported="false" />
        <activity
            android:name=".HomeScreen"
            android:exported="false" />
        <activity
            android:name=".authentification.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".authentification.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".authentification.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>